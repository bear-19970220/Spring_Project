    <select id="findUserByCondition" resultMap="userResultMap">
        SELECT u_id, u_name FROM t_user
        <where>
            <choose>
                <when test="uid != null">
                    and u_id = #{uid}
                </when>
                <when test="uname != null">
                    and u_name like "%"#{uname}"%"
                    <!--            and u_name like '%'#{uname}'%'-->
                </when>
            </choose>
        </where>
    </select>


